<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.weatherapp.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_weatherDisplay"
            app:destination="@id/weatherDisplay" />
    </fragment>
    <fragment
        android:id="@+id/weatherDisplay"
        android:name="com.example.weatherapp.WeatherDisplay"
        android:label="fragment_weather_display"
        tools:layout="@layout/fragment_weather_display" />
</navigation>